<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/styles/posts.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <% if (!locals.book) { %>
    <h1>Publique seu livro</h1>
    <form action="/api/posts" method="post">
      <div class="row">
        <div class="col">
          <input
            type="text"
            name="autor"
            class="form-control"
            placeholder="Autor"
          />
        </div>
        <div class="col">
          <input
            type="text"
            name="title"
            class="form-control"
            placeholder="Título"
          />
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput">Example label</label>
          <textarea
            name="review"
            placeholder="Escreva sua resposta..."
            required
          ></textarea>
        </div>
        <div class="form-group col-md-4">
          <label for="inputState">Ratings</label>
          <select name="ratings" id="inputState" class="form-control">
            <option selected>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
          </select>
        </div>

        <div class="col">
          <input
            type="text"
            name="open_library_id"
            class="form-control"
            placeholder="Autor"
          />
        </div>
        <button type="submit">Postar livro</button>
      </div>
    </form>
    <% } else { %>
    <h1>Atualize seu livro</h1>
    <form action="/api/posts/<%=book.id%>" method="post">
      <div class="row">
        <div class="col">
          <input
            type="text"
            name="autor"
            class="form-control"
            placeholder="Autor"
            value="<%= book.autor %>"
          />
        </div>
        <div class="col">
          <input
            type="text"
            name="title"
            class="form-control"
            placeholder="Título"
            value="<%= book.title %>"
          />
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput">Example label</label>
          <textarea
            name="review"
            placeholder="Escreva sua resposta..."
            required
          >
<%= book.review %></textarea
          >
        </div>
        <div class="form-group col-md-4">
          <label for="inputState">Ratings</label>
          <select
            name="ratings"
            value="<%=book.ratings%>"
            id="inputState"
            class="form-control"
          >
            <option selected>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
          </select>
        </div>

        <div class="col">
          <input
            type="text"
            name="open_library_id"
            class="form-control"
            placeholder="Autor"
            value="<%= book.open_library_id%>"
          />
        </div>
        <button type="submit">Atualizar livro</button>
      </div>
    </form>
    <% } %>
  </body>
</html>
